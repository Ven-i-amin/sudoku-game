{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I",
                "${workspaceFolder}",
                "-I",
                "include",
                "-I",
                "/opt/homebrew/include",
                "-L",
                "/opt/homebrew/lib",
                "-lgtest",
                "-lgtest_main",
                "-lpthread"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}